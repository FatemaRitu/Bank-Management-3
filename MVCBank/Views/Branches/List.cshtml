@model IEnumerable<MVCBank.Models.Branch>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br /><br /><br />
<h2 class="mt-3">All Branch List</h2>
<table class="table table-bordered table-sm">
    <tr class="bg-info text-light tr_font">
        <th>
            SqNo.
        </th>
        <th>
            Branch Name
        </th>
        <th>
            Branch Address
        </th>
        <th>
            Branch Phone
        </th>
    </tr>

    @{ int count = 0;
        foreach (var item in Model)
        {
            count++;
            <tr class="tr_font">
                <td>@count</td>
                <td>
                    @Html.DisplayFor(modelItem => item.BranchName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BranchAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BranchPhone)
                </td>
            </tr>
        }
    }

</table>
